<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_user_group_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="25sp"
        android:id="@+id/textView_user_group_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_user_group_list"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imageView_user_group_list"
        android:layout_toRightOf="@+id/imageView_user_group_list"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2_user_group_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/imageView_user_group_list"
        android:layout_alignLeft="@+id/textView_user_group_list"
        android:layout_alignStart="@+id/textView_user_group_list"
        android:text="TextView"
        android:layout_below="@+id/textView_user_group_list" />
</RelativeLayout>