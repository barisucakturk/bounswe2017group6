<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmpe451.interesthub.fragments.UserRecommendations">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/grouptext"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Groups" />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/grouptext"
                android:id="@+id/group_recomm_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scrollbars="vertical" />

            <TextView
                android:layout_below="@id/group_recomm_recycler_view"
                android:id="@+id/userrecommtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Users" />

            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/userrecommtext"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scrollbars="vertical"
                android:id="@+id/user_recomm_recycler_view"/>

    </RelativeLayout>

    </LinearLayout>

</FrameLayout>
